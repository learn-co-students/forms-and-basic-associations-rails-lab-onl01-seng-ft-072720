<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :Artist %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :Genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>
  <br>

  <%= f.label :notes %><br>
  <input type="text" name="song[song_notes][]" id="song_notes_1"><br>
  <input type="text" name="song[song_notes][]" id="song_notes_2"><br>
  <input type="text" name="song[song_notes][]" id="song_notes_3"><br>
  <input type="text" name="song[song_notes][]" id="song_notes_4"><br>

  <%= f.submit %>
<% end %>







  



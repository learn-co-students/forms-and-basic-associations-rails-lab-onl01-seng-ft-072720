<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
    <datalist id="artists_autocomplete">
      <% Artist.all.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist>
    <br><br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { :prompt => "Select a Genre" } %>
  <br><br>

  <%= f.label :notes %>
  <input name="song[notes][]" id="song_notes_1">
  <input name="song[notes][]" id="song_notes_2">
  <input name="song[notes][]" id="song_notes_3">
  <br><br>

  <%= f.submit %>
<% end %>



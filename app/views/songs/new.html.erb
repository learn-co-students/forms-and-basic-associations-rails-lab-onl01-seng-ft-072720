<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist%>
  <%= f.text_field :artist_name%>
  <%= f.label :genre%>
  <%= f.collection_select :genre, Genre.all, :id, :name%>
  <%= f.label :notes%>
  <%= f.text_area :notes[], id="song_notes_1"%>
  <%= f.text_area :notes[], id="song_notes_2"%>
  <%= f.text_area :notes[], id="song_notes_3"%>
  
  
  <br />
  <%= f.submit %>
<% end %>



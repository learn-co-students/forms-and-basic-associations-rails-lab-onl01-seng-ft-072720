<h1>Create a Song</h1>

<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br><br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br><br>
  <%= f.label :notes1 %>
  <input id="song_notes_1" name="song[notes][]" type="text"/>
  <br><br>
  <%= f.label :notes2 %>
  <input id="song_notes_2" name="song[notes][]" type="text"/>
  <%= f.submit %>
<% end %>


